PLIP_VERSION=0.7
FFMPEG_VERSION=5.0.1
AUDIOWAVEFORM_VERSION=1.6.0
FFTW_VERSION=3.3.10
DESTDIR=
PREFIX=/opt/plip

CROSS_COMPILE=

ifeq ($(CROSS_COMPILE),)
CROSS_PREFIX=
else
CROSS_PREFIX=$(CROSS_COMPILE)-
endif

OS=unix

ifneq ($(findstring mingw,$(CROSS_COMPILE)),)
OS=win
endif

CC=$(CROSS_PREFIX)gcc
CXX=$(CROSS_PREFIX)g++
CFLAGS=-O3 -g
CXXFLAGS=-O3 -g
